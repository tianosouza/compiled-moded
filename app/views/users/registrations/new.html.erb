<div class="flex-col  text-white bg-pink-800 p-6 rounded-3xl shadow-md w-86">
  <h2 class="text-center text-2xl font-bold">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field p-1">
      <%= f.label :name %><br />
      <%= f.email_field :name, autofocus: true, class: "w-full border rounded-2xl p-2 text-black"%>
    </div>
    
    <div class="field p-1">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "w-full border rounded-2xl p-2 text-black" %>
    </div>

    <div class="field p-1">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, class: "w-full border rounded-2xl p-2 text-black" %>
    </div>

    <div class="field p-1">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, class: "w-full border rounded-2xl p-2 text-black" %>
    </div>

    <div class="actions p-1">
      <%= f.submit "Sign up", class: "w-full border rounded-2xl p-2 hover:bg-pink-950 hover:font-bold cursor-pointer" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
